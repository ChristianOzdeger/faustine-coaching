{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<!-- Fil d'ariane -->
	<div class="fil_ariane">
		<div class="fil-container">
			<h2>Connexion</h2>
            <p class="text-center">
            	<a href="{{ path('accueil') }}">Accueil</a>&nbsp;
            	<i class="fa fa-long-arrow-right"></i>&nbsp;
            	<span>Connexion</span>
            </p>
		</div>
	</div>
<!-- Fil d'ariane -->
    {% for message in app.flashes('messages') %}
    <div class="row alert alert-info mt-5">
        {{ message|raw }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endfor %}
<div class="contact-body">
    <div class="au-content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-5 ">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
                        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html #}
                        {# <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div> #}
                        <a class="col-12" href="{{ path('app_forgot_password_request') }}"><small class="text-center">Mot de passe oubli√© ?</small></a>
                        <div class="col text-center mt-3">
							<button class="btn btn-primary" type="submit">{{ button_label|default('Valider') }}</button>
						</div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
