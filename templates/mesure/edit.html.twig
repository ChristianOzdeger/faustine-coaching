{% extends 'base.html.twig' %}

{% block title %}Hello UserAccountController!{% endblock %}

{% block body %}

	<!-- Fil d'ariane -->
	<div class="fil_ariane">
		<div class="fil-container">
			<h2>Mon Suivi</h2>
            <p class="text-center">
            	<a href="{{ path('accueil') }}">Accueil</a>&nbsp;
            	<i class="fa fa-long-arrow-right"></i>&nbsp;
                <a href="{{ path('user_account_read') }}">Mon compte</a>&nbsp;
                <i class="fa fa-long-arrow-right"></i>&nbsp;
            	<span>Modification</span>
            </p>
		</div>
	</div>
	<!-- Fil d'ariane -->

    <!-- Servives Section -->
    
	<div class="serv-page">
        <div class="container">
		<div class="service-tab">
		<h4>Mes mesures du {{ form.date.vars.data|date("d/m/Y") }} </h4>
			<div class="tab-content">
				<div id="contenu1">
					<div class="row justify-content-center">
                        
						{{ form_start(form) }}
                            <div class="form-row">
                                <div class="col-12 col-sm-3">{{ form_label(form.date) }}</div>
								<div class="col-12 col-sm-9">{{ form_widget(form.date) }}</div>
								{{ form_errors(form.date) }}
                            </div>
                            <div class="form-row">
                                <div class="col-12 col-sm-3">{{ form_label(form.bras) }}</div>
                                <div class="col-12 col-sm-9">{{ form_widget(form.bras) }}</div>
                                {{ form_errors(form.bras) }}
                            </div>
                            <div class="form-row">
                                <div class="col-12 col-sm-3">{{ form_label(form.buste) }}</div>
                                <div class="col-12 col-sm-9">{{ form_widget(form.buste) }}</div>
                                {{ form_errors(form.buste) }}
                            </div>
                            <div class="form-row">
                                <div class="col-12 col-sm-3">{{ form_label(form.ventre) }}</div>
                                <div class="col-12 col-sm-9">{{ form_widget(form.ventre) }}</div>
                                {{ form_errors(form.ventre) }}
                            </div>
                            <div class="form-row">
                                <div class="col-12 col-sm-3">{{ form_label(form.hanches) }}</div>
                                <div class="col-12 col-sm-9">{{ form_widget(form.hanches) }}</div>
                                {{ form_errors(form.hanches) }}
                            </div>
                            <div class="form-row">
                                <div class="col-12 col-sm-3">{{ form_label(form.cuisses) }}</div>
                                <div class="col-12 col-sm-9">{{ form_widget(form.cuisses) }}</div>
                                {{ form_errors(form.cuisses) }}
                            </div>
                            <div class="form-row">
                                <div class="col-12 col-sm-3">{{ form_label(form.poids) }}</div>
                                <div class="col-12 col-sm-9">{{ form_widget(form.poids) }}</div>
                                {{ form_errors(form.poids) }}
                            </div>
                            <div class)"form-row">
                                <div class="col text-center mt-4">
                                    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                                </div>
                            </div>
						{{ form_end(form) }}		
                      
					</div>
				</div>
			</div>
        </div>
        </div>
	</div>
	<!-- Services Section -->
{% endblock %}
