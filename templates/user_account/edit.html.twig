{% extends 'base.html.twig' %}

{% block title %}Informations modification{% endblock %}

{% block body %}
	<!-- Fil d'ariane -->
	<div class="fil_ariane">
		<div class="fil-container">
			<h2>Mon Compte</h2>
            <p class="text-center">
            	<a href="index.html">Accueil</a>&nbsp;
            	<i class="fa fa-long-arrow-right"></i>&nbsp;
                <a href="{{ path('user_account_read') }}">Mon compte</a>&nbsp;
                <i class="fa fa-long-arrow-right"></i>&nbsp;
            	<span>Modification</span>
            </p>
		</div>
	</div>
	<!-- Fil d'ariane -->
<div class="contact-body">
	<div class="au-content">
        <div class="container">
			<div class="row justify-content-center"> 
				<div class="col-12 col-lg-5">
					{{ form_start(form) }}
						<div class="champ">
							<div class="col-12 col-sm-3">{{ form_label(form.nom) }}</div>
							<div class="col-12 col-sm-9">{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}</div>	
							{{ form_errors(form.nom) }}
						</div>
						<div class="champ">
							<div class="col-12 col-sm-3">{{ form_label(form.prenom) }}</div>
							<div class="col-12 col-sm-9">{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}</div>	
							{{ form_errors(form.prenom) }}
						</div>
						<div class="champ">
							<div class="col-12 col-sm-3">{{ form_label(form.email) }}</div>
							<div class="col-12 col-sm-9">{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}</div>	
							{{ form_errors(form.email) }}
						</div>
						<div class="champ">
							<div class="col-12 col-sm-3">{{ form_label(form.telephone) }}</div>
							<div class="col-12 col-sm-9">{{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}</div>	
							{{ form_errors(form.telephone) }}
						</div>
						<div class="champ">
							<div class="col-12 col-sm-9">{{ form_widget(form.password) }}</div>	
							{{ form_errors(form.password) }}
						</div>                           
						<div class="champ">
							<div class="col text-center">
								<button class="btn btn-primary" type="submit">{{ button_label|default('Enrengistrer') }}</button>
							</div>
						</div>
					{{ form_end(form) }}	
				</div>	
			</div>
	    </div>
	</div>
</div>
{% endblock %}
